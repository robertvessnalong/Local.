{% extends 'base.j2'%}
{%block title%}{{rest.name}} - Local.{%endblock%}
{%block content%}

<section class="hero-section-inner">
  <header class="primary-header">
    <div class="container d-center">
        <div class="brand">
            <a href="/">Local.</a>
        </div>
    </div>
</header>
    <div class="hero-content-inner">
      <div class="swiper-container mySwiper-Rest-Page">
        <div class="swiper-wrapper">
          {% for photo in rest['photos'] %}
            <div class="swiper-slide"><img src="{{photo}}"></div>
          {%endfor%}
        </div>
          <div class="hero-content-info">
           <div class="container">
            <div class="rest-info">
                <h1>{{rest.name}}</h1>
                    <div class="rating">
                        {% if rating.isInt == True %}
                            {% for checked in range(rating.number)%}
                            <i class="fa fa-star checked"></i>
                            {%endfor%}
                        {%elif rating.isInt == False %}
                            {% for checked in range(rating.number)%}
                                {% if loop.last %}
                                    <i class="fas fa-star-half"></i>
                                {%else%}
                                    <i class="fa fa-star checked"></i>
                                {%endif%}
                            {%endfor%}
                        {%endif%}
                       <span class="total-reviews">{{rest.review_count}} Reviews</span>
                    </div>
                    <div class="price_claimed_type">
                        <div class="claimed">
                            {% if rest.is_claimed %}
                            <i class="fas fa-check-circle"></i>
                            <span class="claimed-text">Claimed</span>
                            {% else %}
                             <span class="unclaimed-text">Unclaimed</span>
                            <i class="fas fa-exclamation-circle"></i>
                            {%endif%}
                        </div>
                        {%if rest['price']%}
                        <div class="price">
                            <span class="price-info">{{rest['price']}}</span>
                        </div>
                        {%endif%}
                        <div class="type">
                            {% if rest['price']%}
                            <span class="type-info">{{rest['categories'][0].title}}</span>
                            {%else%}
                            <ul class="category">
                            {% for category in rest['categories']%}
                                {%if loop.last%}
                                    <li class="type-info single">{{category.title}}</li>
                                {% else %}
                                    <li class="type-info single">{{category.title}},</li>
                                {%endif%}
                            {%endfor%}
                            </ul>
                            {%endif%}
                        </div>
                    </div>
                    {% if time['is_open_now'] %}
                        <div class="status_time">
                            <div class="status">
                                {% if time.is_open_now %}
                                <span class="is_open">Open</span>
                                {%else%}
                                <span class="is_closed">Closed</span>
                                {%endif%}
                            </div>
                            <div class="time">
                                <span class="hours">{{time.start}} - {{time.end}}</span>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
  </section>
  <section class="main-content-inner">
    <div class="container">
        <header class="header-buttons">
            <div class="action-buttons">
                <div class="review">
                    <li href="/review" class="review-btn">Write A Review</li>
                </div>
                <div class="favorite">
                {% if session['user_id'] %}
                   {% if favorite[0] == rest.id %}
                        <li data-id={{rest.id}} class="favorite-btn"><i class="fas fa-heart"></i> Favorite</li>
                   {%else %}
                        <li data-id="{{rest.id}}" class="favorite-btn"><i class="far fa-heart"></i>  Favorite</li>
                   {%endif%}
                   {%else%}
                        <li data-id={{rest.id}} class="favorite-btn"><i class="far fa-heart"></i> Favorite</li>
                {%endif %}
                </div>
            </div>
        </header>
    </div>
  </section>
{%endblock%}